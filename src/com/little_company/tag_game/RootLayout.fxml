<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="520.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.little_company.tag_game.ViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Game">
            <items>
              <MenuItem fx:id="newGame" mnemonicParsing="false" onAction="#startNewGame" text="New Game" />
                  <MenuItem mnemonicParsing="false" onAction="#openOptionsMenu" text="Options" />
                  <MenuItem mnemonicParsing="false" text="High Scores" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <buttons>
            <Group fx:id="scoreGroup" visible="false">
               <children>
                  <Label alignment="BOTTOM_LEFT" maxWidth="72.0" prefHeight="17.0" prefWidth="55.0" text="Score" />
                  <Label fx:id="scoreLabel" layoutX="85.0" prefHeight="17.0" prefWidth="66.0" />
               </children>
            </Group>
         </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
